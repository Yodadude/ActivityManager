<!DOCTYPE html>
<html>
  <head>
    <title>Activity Manager</title>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
    <meta content=0 http-equiv=Expires>
    <meta content="no-cache" http-equiv=Pragma>
    <link type="text/css" rel="stylesheet" href="~/Styles/bootstrap.css">
    <link type="text/css" rel="stylesheet/less" href="~/Styles/Site.less?a=6">
    <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    <script type="text/javascript" src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script type="text/javascript" src="~/Scripts/less-1.3.1.min.js"></script>
  </head>
  <body>
    <div id="container">
        <div id="header">
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <a class="brand" href="#">Activity Manager</a>
                        <div class="nav-collapse collapse">
                            <ul class="nav">
                                <li class="active"><a href="#">Connection</a></li>
                            </ul>
                        </div><!--/.nav-collapse -->
                    </div>
                </div>
            </div>
        </div>

        <div id="main">
          @RenderBody()
        </div>

       
        <div id="footer">
          <img src="~/Images/inlogik.png" alt="logo"/>&nbsp;Inlogik &copy; @DateTime.Now.Year
        </div>

    </div>
  </body>
</html>